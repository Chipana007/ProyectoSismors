<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bienvenida"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/carrito"
    tools:context="com.example.horus.proyectosismors.Bienvenida">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        app:srcCompat="@drawable/tesis"
        android:id="@+id/imageView" />

    <TextView
        android:text="Bienvenidos"
        android:textAlignment="center"
        android:textColor="#f40707"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView4"
        android:layout_weight="0.12"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Este sistema te ayudara a enterarte de muchas ofertas leyendo el codigo de barras"
        android:textAlignment="center"
        android:textColor="@color/viewfinder_laser"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView3"
        android:layout_weight="0.26"
        android:layout_marginTop="30dp" />


    <Button
        android:text="COMENZAR"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:id="@+id/comenzar"
        android:background="@color/colorAccent"
        android:layout_marginBottom="50dp" />

</LinearLayout>
